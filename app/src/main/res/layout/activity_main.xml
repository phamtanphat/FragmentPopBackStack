<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ptp.phamtanphat.fragmentpopbackstack.MainActivity">

    <Button
        android:id="@+id/buttonAddfragmentA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Fragment A" />

    <Button
        android:id="@+id/buttonAddfragmentB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonAddfragmentA"
        android:text="Add Fragment B" />
    <Button
        android:layout_toRightOf="@id/buttonAddfragmentB"
        android:id="@+id/buttonReplacefragmentA"
        android:text="Replace A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@id/buttonAddfragmentB"
        android:id="@+id/buttonReplacefragmentB"
        android:text="Replace B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
